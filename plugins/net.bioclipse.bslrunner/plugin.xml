         id="net.bioclipse.bslrunner.application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="net.bioclipse.bslrunner.Application">
         </run>
      </application>
